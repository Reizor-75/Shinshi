  <% if (!user) { %>
    <script defer src="https://accounts.google.com/gsi/client"></script>
  <% } %>
</head>
<body>
  <nav>
    <img src="/images/pigeonV2.png" alt="pigeon mascot" height="50px">
    <a href="/" class="website-title">Shinshi</a>
    <div class="website-links">
      <a href="/catalog" class="catalog"> Anime Catalog
      </a>
      
      <% if (user) { %>    
        <div class="profile-container">
          <div class="profile-title">Profile</div>
          <div class="profile-options">
            <a class="option" href="/profiles/watched">Watched List</a>
            <a class="option" href="/profiles/reviews">Reviews</a>
            <% if (user?.profile.role > 500) {  %>
              <a href="/new" class="option">Add Anime</a>
            <% } %>
            <a class="option option-logout" href="/auth/logout">
              <button class="logout-button" type="submit">Logout</button>
            </a>
          </div>
        </div>

      <% } else { %>
        <div 
          id="g_id_onload"
          data-client_id="<%= googleClientID %>"
          data-login_uri="/auth/google"
          data-auto_prompt="false"
          data-prompt_parent_id="g_id_onload"
        ></div>
        <div 
          class="g_id_signin right"
          data-type="standard"
          data-size="large"
          data-theme="outline"
          data-text="sign_in_with"
          data-shape="rectangular"
          data-logo_alignment="left"
        ></div>
      <% } %>
    </div>
  </nav>
