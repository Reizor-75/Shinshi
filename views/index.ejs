<%- include('./partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/index.css">
<%- include('./partials/nav') %>

<main>
  <div class="index-container">
    <div class="title"><%= title %></div>
    <div class="card-container">
      <% for(let i = 0; i < 10; i++) { %>
        <% if (animes.length <= i) { break; } %>
          <a class="text-decoration-none" href="/catalog/<%= animes[i]._id %>">
          <div class="card">
            <div class="tester">
              <img 
                src="<%= animes[i].imageURL %>" 
                alt="<%= animes[i].title %>'s cover image"
                class="anime-image"
              ></div>
            <div class="card-body">
              <h1 class="card-title"><%= animes[i].title %></h1>
            </div>
          </div>
        </a>
      <% } %>
    </div>
  </div>

</main>

<%- include('./partials/footer') %>
