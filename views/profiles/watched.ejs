<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <div>
    <div class="header">
      <h1><%= title %></h1>
      <form action="/profiles/watched" method="POST" >
        <input type="search" name="title" placeholder="Search Anime" id=""/>
        <button type="submit"> Add Anime</button>
      </form>
    </div>
    <div class="card-container">
      <% if (!profile.watchedList.length) { %>
        <h2>No Anime</h2>
      <% } else { %>
        <% animes.forEach(anime => { %>
          <a class="text-decoration-none" href="/catalog/<%= anime._id %>">
            <div class="card">
              <img 
                src="<%= anime.imageURL %>" 
                alt="<%= anime.title %>'s cover image"
                width="100px"
              >
              <div class="card-body">
                <div class="card-title"><%= anime.title %></div>
                <div>Release: <%= anime.releaseYear.getFullYear()+1%> </div>
                <div>Rating: <%= anime.rating %> </div>
              </div>
            </div>
          </a>
          <hr/>
        <% }) %>
      <% } %>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
